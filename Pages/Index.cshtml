@page
@model IndexModel
@using System.IO
@{
    ViewData["Title"] = "Home page";
    SessionFiles sessionFiles = (SessionFiles)ViewData["SessionFiles"];
}
<h1>
    Upload file here!
</h1>
<div class="text-center">
    <form method="post" enctype="multipart/form-data">
    <input type="file" asp-for="Upload" />
    <input type="submit" />
    </form>
</div>
<br>
<div class="DownloadFilesGrid">
        @foreach (FileInfo item in sessionFiles.UploadedList())
        {
                <div class="UploadedFile">
                    @item.Name
                    <form class="FileForm" asp-page-handler="DownloadFile" method="post">
                    <button class="DownloadButton" class="btn btn-default">Download</button>
                    <input type="hidden" name="file" value=@item.Name />
                    </form>
                </div>
        }
</div>
